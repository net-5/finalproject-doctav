@model IEnumerable<Conference.Domain.Entities.Workshops>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" type="text/css" href="~/css/workshops.css" />

<h1>Index</h1>

<div id="carouselTavy" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{int i = 0;}
        @foreach (var item in Model)
        {
            i++;
            if (i == 1)
            { //define the ACTIVE carousel item
                <div class="carousel-item active">
                    <div class="conferintaTavy">
                        <div class="workshopNameTavy">Workshop name: @item.Name</div>
                        <div class="workshopDescriptionTavy">Workshop description: @item.Description</div>
                        <div class="workshopSpeakerTavy">Speaker: @item.Speaker.FirstName @item.Speaker.LastName</div>
                        <div class="workshopSpeakerLinkTavy"> <a class="aTavy" href=@item.RegistrationLink>Register now!</a> </div>
                    </div>
                </div>
            }
            else
            { //define a simple (normal) non-active carousel item
                <div class="carousel-item">
                    <div class="conferintaTavy">
                        <div class="workshopNameTavy">Workshop name: @item.Name</div>
                        <div class="workshopDescriptionTavy">Workshop description: @item.Description</div>
                        <div class="workshopSpeakerTavy">Speaker: @item.Speaker.FirstName @item.Speaker.LastName</div>
                        <div class="workshopSpeakerLinkTavy"> <a class="aTavy" href=@item.RegistrationLink>Register now!</a> </div>
                    </div>
                </div>
            }
        }
    </div>

    <a class="carousel-control-prev" href="#carouselTavy" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselTavy" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
